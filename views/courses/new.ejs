
<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <h1 class="mb-4">Add New Course</h1>
    <form action="/courses" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="course[title]" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="course[location]" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="student_rating">Student Rating</label>
            <input class="form-control" type="text" id="location" name="course[student_rating]" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="rating">Description</label>
            <textarea class="form-control" type="text" id="description" name="course[description]" required></textarea>
        </div>
        <button class="btn btn-custom mt-3">Add Course</button>
    </form>
</div>
