<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="search-container">
        <form id="search-form">
            <input class="form-control" type="search" placeholder="Search departments..." aria-label="Search" id="search-input" name="q">
            <i class="fas fa-search search-icon"></i>
        </form>
    </div>    
    <div class="row">
        <% departments.forEach(department => { %>
            <div class="col-md-4 mb-4">
                <a href="/courses/department/<%= encodeURIComponent(department) %>" class="text-decoration-none">
                    <div class="card h-100 department-card">
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <h5 class="card-title text-center mb-0"><%= department %></h5>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</div>

<script src="/javascripts/departmentSearch.js"></script>