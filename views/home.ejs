<% layout('layouts/boilerplate') %>

<div class="home-container">
    <div class="content-wrapper">
        <header class="header-section">
            <div class="container text-container">
                <h1 class="display-4 fade-in">Course Scheduling Made Easy</h1>
                <p class="lead fade-in-delay">Simplify your course planning in three easy steps</p>
            </div>
        </header>

        <section id="process-section" class="process-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 process-step">
                        <i class="fas fa-search fa-3x mb-3"></i>
                        <h3>1. Browse Courses</h3>
                        <p>Explore our wide range of courses with ease.</p>
                    </div>
                    <div class="col-md-4 process-step">
                        <i class="fas fa-plus-circle fa-3x mb-3"></i>
                        <h3>2. Add to Dashboard</h3>
                        <p>Select the courses you're interested in with a single click.</p>
                    </div>
                    <div class="col-md-4 process-step">
                        <i class="fas fa-magic fa-3x mb-3"></i>
                        <h3>3. Optimize</h3>
                        <p>Let our smart algorithm create your ideal schedule.</p>
                    </div>
                </div>
                <div class="text-center mt-5">
                    <a href="/courses" class="btn btn-custom btn-lg">Start Optimizing</a>
                </div>
            </div>
        </section>
    </div>
</div>

<script src="/javascripts/home.js"></script>